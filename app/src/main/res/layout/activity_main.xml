<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383636"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!--text cursorDrawable la chinh sua mau cho con tro.
            muon doi mau cua thanh ngang duoi chan noi dung edit text
             thi vao android/app/res/values/styles.xml/ roi doi mau colorAccent-->
            <EditText
                android:id="@+id/edt_input"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:inputType="text"
                android:textColor="#484646"
                android:textCursorDrawable="@color/white"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edt_input"
                android:textSize="40dp" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"

            >


            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#383636"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#383636"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_comma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#383636"
                android:text=","
                android:textColor="#ffffff"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">


            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">


            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383636"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">


            <Button
                android:id="@+id/btn_C"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b4b4b4"
                android:text="C"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b4b4b4"
                android:text="÷"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b4b4b4"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b4b4b4"
                android:text="–"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b4b4b4"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="30dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="horizontal"

        >


    </LinearLayout>

</LinearLayout>
